<launch>
  <arg name="camera1"              			default="t265"/>		<!-- Note: Replace with camera name -->
  <arg name="camera2"              			default="d400"/>		<!-- Note: Replace with camera name -->

  <node name="image_view_fe1" pkg="image_view" type="image_view" args="image:=$(arg camera1)/fisheye1/image_raw"/>
  <node name="image_view_fe2" pkg="image_view" type="image_view" args="image:=$(arg camera1)/fisheye2/image_raw"/>

  <node name="image_view_color" pkg="image_view" type="image_view" args="image:=$(arg camera2)/color/image_raw"/>
  <node name="image_view_ir1" pkg="image_view" type="image_view" args="image:=$(arg camera2)/infra1/image_rect_raw"/>
  <node name="image_view_ir2" pkg="image_view" type="image_view" args="image:=$(arg camera2)/infra2/image_rect_raw"/>

  <node name="image_saver_fe1" pkg="image_view" type="image_saver" args="image:=$(arg camera1)/fisheye1/image_raw _filename_format:=$(env HOME)/fe1_%04d.png _save_all_image:=false"/>
  <node name="image_saver_fe2" pkg="image_view" type="image_saver" args="image:=$(arg camera1)/fisheye2/image_raw _filename_format:=$(env HOME)/fe2_%04d.png _save_all_image:=false"/>

  <node name="image_saver_color" pkg="image_view" type="image_saver" args="image:=$(arg camera2)/color/image_raw _filename_format:=$(env HOME)/color_%04d.png _save_all_image:=false"/>
  <node name="image_saver_ir1" pkg="image_view" type="image_saver" args="image:=$(arg camera2)/infra1/image_rect_raw _filename_format:=$(env HOME)/ir1_%04d.png _save_all_image:=false"/>
  <node name="image_saver_ir2" pkg="image_view" type="image_saver" args="image:=$(arg camera2)/infra2/image_rect_raw _filename_format:=$(env HOME)/ir2_%04d.png _save_all_image:=false"/>
</launch>
